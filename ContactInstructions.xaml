    <Window x:Class="ContactList.ContactInstructions"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Instructions" Height="300" Width="300" Background="LightSteelBlue">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock
            x:Name="instrTextBlock"
             Initialized="instrTextBlock_Initialized"
            Grid.Row="0"
            Margin="10"
            Background="White" 
            TextWrapping="WrapWithOverflow"
            >                
        </TextBlock>

        <Button x:Name="backButton"
                Click="backButton_Click"
                Grid.Row="1"
                Content="Back"
                Margin="50,5,50,5"
                />
        
    </Grid>
</Window>
